// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // This tells Prisma to use the direct connection for migrations
  // and the Accelerate URL for your application's client.
  url      = env("DATABASE_URL")
}

model Subscription {
  id        Int      @id @default(autoincrement())
  telegramId String
  domain    String
  createdAt DateTime @default(now())

  @@unique([telegramId, domain])
}